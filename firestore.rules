rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return exists(/databases/$(database)/documents/adminUsers/$(request.auth.uid))
    }
    match /states/{document=**} {
      allow read;
    }
    match /content/{document=**} {
      allow read;
      allow write: if isAdmin();
    }
  }
}
